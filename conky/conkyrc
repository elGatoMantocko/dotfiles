#!/usr/bin/conky
background        no
out_to_console 	  yes
out_to_x	  no
update_interval	  2
total_run_times	  0
short_units	  yes
pad_percents	  3

override_utf8_locale yes
times_in_seconds true

TEXT
,[
  # weather
  {
    "full_text": " ${exec cat ~/.tmp/weather/icon}  ${exec cat ~/.tmp/weather/current}°F ",
    "color":"\#B58900",
    "align": "left"
  },
  
  # wireless adapter
  ${if_up wlan0}
    {
      "full_text": "   ${downspeedf wlan0}KB   ${upspeedf wlan0}KB ",
      "color":"\#A4ADD3"
    },
    {
      "full_text": "   ${wireless_essid wlan0} [${wireless_link_qual_perc wlan0}%] ",
      "color":"\#33CC99"
    },
  $else 
    # vpn
    ${if_up ppp0}
      {
        "full_text": "   ${downspeedf ppp0}KB   ${upspeedf ppp0}KB ",
        "color":"\#A4ADD3"
      },
      {
        "full_text": "   orange ",
        "color":"\#33CC99"
      },
    $else
      # ethernet adapter
      ${if_up eth0}
        {
          "full_text": "   ${downspeedf eth0}KB   ${upspeedf eth0}KB ",
          "color":"\#A4ADD3"
        },
        {
          "full_text": "   eth0 ",
          "color":"\#33CC99"
        },
      $else
        {
          "full_text": " ≈ no connection ",
          "color":"\#33CC99"
        },
      $endif
    $endif
  $endif

  # battery status
  {
    "full_text": " ${exec ~/.dotfiles/conky/batteryicon} [${battery_percent BAT1}%, ${battery_percent BAT0}%] ${format_time ${battery_time BAT1} "\hh \mm"} ",
    "color":"\#9933CC"
  },
  
  # system volume
  {
	  "full_text": "   ${exec ~/.dotfiles/conky/volumelevel.sh}% ",
	  "color": ${if_empty ${exec ~/.dotfiles/conky/ismute.sh | grep yes}}"\#cccccc"${else}"\#ffff00"${endif}
  },
  
  # date
  {
    "full_text": " ${time %a %b %d} "
  },

  # time
  {
    "full_text": " ${time %I:%M} "
  }
]
