times_in_seconds true

TEXT
  # ,[{"full_text": " ${exec ~/.i3/weather.sh} ","color": "\#DC322F"},
  ,[{"full_text": "   [$membar] ", "color":"\#B58900"},
  ${if_up wlp3s0}
    {"full_text": "   ${wireless_essid wlp3s0} [${wireless_link_qual_perc wlp3s0}%] ","color":"\#33CC99"},
  $else ${if_up ppp0}
    {"full_text": "   orange ","color":"\#33CC99"},
  $else ${if_up eth0}
    {"full_text": "   enp0s25 ","color":"\#33CC99"},
  $else
    {"full_text": " ≈ no connection ","color":"\#33CC99"},
  $endif
  $endif
  $endif
  {"full_text": " ${exec ~/.dotfiles/conky/batteryicon} [${battery_percent BAT1}%, ${battery_percent BAT0}%] ${format_time ${battery_time BAT1} "\hh \mm"} ","color":"\#9933CC"},
  {
	  "full_text": "   ${exec ~/.dotfiles/conky/volumelevel.sh}% ",
